generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model Branch {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  color    String    @default("f1lab-light")
  services Service[]
}

model Service {
  id              Int               @id @default(autoincrement())
  title           String            @default("")
  cases           ServiceCase[]
  branch          Branch            @relation(fields: [branchId], references: [id])
  branchId        Int
  addedAt         DateTime          @default(now())
  updatedAt       DateTime          @default(now())
  CasesOnServices CasesOnServices[]
}

model ServiceCase {
  id              Int               @id @default(autoincrement())
  title           String            @default("")
  description     String            @default("")
  body            String            @default("")
  imageUrl        String            @default("default.png")
  services        Service[]
  addedAt         DateTime          @default(now())
  updatedAt       DateTime          @default(now())
  CasesOnServices CasesOnServices[]
}

model CasesOnServices {
  service    Service     @relation(fields: [serviceId], references: [id])
  serviceId  Int // relation scalar field (used in the `@relation` attribute above)
  case       ServiceCase @relation(fields: [caseId], references: [id])
  caseId     Int // relation scalar field (used in the `@relation` attribute above)
  assignedAt DateTime    @default(now())
  assignedBy String

  @@id([serviceId, caseId])
}
