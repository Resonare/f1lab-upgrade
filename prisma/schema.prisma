generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
  salt     String
}

model Branch {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  color    String    @default("f1lab-light")
  services Service[]
}

model Service {
  id              Int               @id @default(autoincrement())
  title           String            @default("")
  link            String            @default("")
  addedAt         DateTime          @default(now())
  updatedAt       DateTime          @default(now())
  branch          Branch            @relation(fields: [branchId], references: [id])
  branchId        Int
  tag             Tag               @relation(fields: [tagId], references: [id])
  tagId           Int               @unique
  cases           ServiceCase[]
}

model Tag {
  id                  Int                   @id @default(autoincrement())
  title               String                @unique
  color               String                @default("gray-100")
  link                String                @default("")
  inverseColor        Boolean               @default(false)
  addedAt             DateTime              @default(now())
  updatedAt           DateTime              @default(now())
  service             Service?
  cases               ServiceCase[]
  doneInCase          DoneInCase[]
}

model ServiceCase {
  id                  Int                   @id @default(autoincrement())
  description         String                @default("")
  task                String                @default("")
  results             String                @default("")
  published           Boolean               @default(false)
  addedAt             DateTime              @default(now())
  updatedAt           DateTime              @default(now())
  client              Client                @relation(fields: [clientId], references: [id])
  clientId            Int
  numbers             NumberInCase[]
  dones               DoneInCase[]
  services            Service[]
  technologyTags      Tag[]
}

model Client {
  id          Int           @id @default(autoincrement())
  title       String        @default("")
  description String        @default("")
  logoPath    String        @default("")
  addedAt     DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  cases       ServiceCase[]
  critiques   Critique[]
}

model Critique {
  id         Int      @id @default(autoincrement())
  title      String   @default("")
  subtitle   String   @default("")
  body       String   @default("")
  avatarPath String   @default("")
  logoPath   String   @default("")
  addedAt    DateTime @default(now())
  updatedAt  DateTime @default(now())
  client     Client   @relation(fields: [clientId], references: [id])
  clientId   Int
}

model NumberInCase {
  id        Int         @id @default(autoincrement())
  title     String      @default("")
  body      String      @default("")
  addedAt   DateTime    @default(now())
  updatedAt DateTime    @default(now())
  case      ServiceCase @relation(fields: [caseId], references: [id])
  caseId    Int
}

model DoneInCase {
  id             Int         @id @default(autoincrement())
  title          String      @default("")
  description    String      @default("")
  iconPath       String      @default("")
  mobileIconPath String      @default("")
  addedAt        DateTime    @default(now())
  updatedAt      DateTime    @default(now())
  case           ServiceCase @relation(fields: [caseId], references: [id])
  caseId         Int
  tags           Tag[]
}