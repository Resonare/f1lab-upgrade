generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
  salt     String
}

model Branch {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  color    String    @default("f1lab-light")
  services Service[]
}

model Service {
  id              Int               @id @default(autoincrement())
  title           String            @default("")
  link            String            @default("")
  cases           ServiceCase[]
  branch          Branch            @relation(fields: [branchId], references: [id])
  branchId        Int
  addedAt         DateTime          @default(now())
  updatedAt       DateTime          @default(now())
  CasesOnServices CasesOnServices[]
}

model Tag {
  id                  Int                   @id @default(autoincrement())
  title               String                @unique
  color               String                @default("gray-100")
  link                String                @default("")
  addedAt             DateTime              @default(now())
  updatedAt           DateTime              @default(now())
  cases               ServiceCase[]
  CasesOnTags         CasesOnTags[]
}

model ServiceCase {
  id                  Int                   @id @default(autoincrement())
  description         String                @default("")
  task                String                @default("")
  results             String                @default("")
  published           Boolean               @default(false)
  addedAt             DateTime              @default(now())
  updatedAt           DateTime              @default(now())
  client              Client                @relation(fields: [clientId], references: [id])
  clientId            Int                   @default(-1)
  numbers             NumberInCase[]
  dones               DoneInCase[]
  services            Service[]
  CasesOnServices     CasesOnServices[]
  technologyTags      Tag[]
  CasesOnTechnologies CasesOnTags[]
}

model CasesOnServices {
  service    Service     @relation(fields: [serviceId], references: [id])
  serviceId  Int
  case       ServiceCase @relation(fields: [caseId], references: [id])
  caseId     Int
  assignedAt DateTime    @default(now())
  assignedBy String

  @@id([serviceId, caseId])
}

model CasesOnTags {
  tag          Tag  @relation(fields: [tagId], references: [id])
  tagId        Int
  case         ServiceCase @relation(fields: [caseId], references: [id])
  caseId       Int
  assignedAt   DateTime    @default(now())
  assignedBy   String

  @@id([tagId, caseId])
}

model Client {
  id          Int           @id @default(autoincrement())
  title       String        @default("")
  description String        @default("")
  logoPath    String        @default("")
  addedAt     DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  cases       ServiceCase[]
  critiques   Critique[]
}

model Critique {
  id         Int      @id @default(autoincrement())
  title      String   @default("")
  subtitle   String   @default("")
  body       String   @default("")
  avatarPath String   @default("")
  addedAt    DateTime @default(now())
  updatedAt  DateTime @default(now())
  client     Client   @relation(fields: [clientId], references: [id])
  clientId   Int
}

model NumberInCase {
  id        Int         @id @default(autoincrement())
  title     String      @default("")
  body      String      @default("")
  addedAt   DateTime    @default(now())
  updatedAt DateTime    @default(now())
  case      ServiceCase @relation(fields: [caseId], references: [id])
  caseId    Int
}

model DoneInCase {
  id             Int         @id @default(autoincrement())
  title          String      @default("")
  description    String      @default("")
  iconPath       String      @default("")
  mobileIconPath String      @default("")
  addedAt        DateTime    @default(now())
  updatedAt      DateTime    @default(now())
  case           ServiceCase @relation(fields: [caseId], references: [id])
  caseId         Int
}
